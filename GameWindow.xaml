<Window x:Class="SnakeQuest.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnakeQuest"
        mc:Ignorable="d"
        Title="GameWindow" Height="520" Width="850"
        KeyUp="Window_KeyUp" Closed="Window_Closed">

    <Border BorderBrush="Black" BorderThickness="5">
        <Canvas x:Name="GameArea" ClipToBounds="True" Width="800" Height="450">
            <Menu Height="450" Width="800"/>

        </Canvas>
    </Border>

</Window>
